        <div>
          <span>Password</span>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white pr-0"><i class="fa fa-lock" aria-hidden="true"></i></span>
            </div>
            <input type="password" class="form-control border-left-0" placeholder="Password">
          </div>
        </div>
