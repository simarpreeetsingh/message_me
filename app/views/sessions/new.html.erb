      </div>
    </div>
    <div class="col-lg-2 d-flex flex-column justify-content-center align-items-center">
      <div class="ver h-50 border-left"></div>
      <span>OR</span>
      <div class="ver h-50 border-left"></div>
    </div>
    <div class="col-lg-5 d-flex flex-column justify-content-center align-items-center">
      <div class="mr-5 pr-4">
        <button class="btn btn-success px-5"><i class="fas fa-pen-square mr-2"></i>Sign up</button>
      </div>
    </div>
  </div>
</div>

<div class="w-100 d-flex justify-content-center">
  <div class="login card row w-75 bg-light d-flex justify-content-between flex-row">
    <div class="col-lg-5 d-flex flex-column justify-content-center">
      <div class="d-flex flex-column align-items-center ml-5 pl-5">
        <%= form_with(model: @user, url: login_path, local: true) do | f | %>
          <div>
            <%= f.label :username, 'Username' %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white pr-0"><i class="fa fa-user"></i></span>
              </div>
              <%= f.text_field :username, class: 'form-control border-left-0', placeholder: 'Username' %>
            </div>
          </div>
          <div>
            <%= f.label :password, 'Password babes' %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white pr-0"><i class="fa fa-lock" aria-hidden="true"></i></span>
              </div>
              <%= f.password_field :password, class: 'form-control border-left-0', placeholder: 'Password' %>
            </div>
          </div>
          <button class="btn btn-primary py-0 mt-1">Login</button>
        <% end %>
      </div>
    </div>
    <div class="col-lg-2 d-flex flex-column justify-content-center align-items-center">
      <div class="ver h-50 border-left"></div>
      <span>OR</span>
      <div class="ver h-50 border-left"></div>
    </div>
    <div class="col-lg-5 d-flex flex-column justify-content-center align-items-center">
      <div class="mr-5 pr-4">
        <button class="btn btn-success px-5"><i class="fas fa-pen-square mr-2"></i>Sign up</button>
      </div>
    </div>
  </div>
</div>