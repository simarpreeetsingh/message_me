<% flash.each do | type, msg | %>
  <div class="alert alert-<%= type %> alert-dismissible fade show text-center" role="alert">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>